<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/io"
                style="@style/h1"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/univIOhelp"
                android:layout_marginTop="25dp"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:layout_alignParentRight="true"
                android:id="@+id/exportUniv"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exportUniv"
                android:layout_alignParentLeft="true"
                android:id="@+id/exportUnivTitle"
                android:layout_centerVertical="true"/>
        <Spinner
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/univList"
                android:layout_toLeftOf="@+id/exportUniv"
                android:layout_toRightOf="@+id/exportUnivTitle"
                android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/importUniv"
                android:layout_alignParentLeft="true"
                android:id="@+id/importTitle"
                android:layout_centerVertical="true"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/univToImport"
                android:minWidth="100dp"
                android:maxWidth="180dp"
                android:layout_toRightOf="@+id/importTitle"
                android:layout_centerVertical="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:id="@+id/importUniv"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>